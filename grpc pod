kubectl run grpc-client --image=appropriate/curl --restart=Never --command -- /bin/sh -c "apk add --no-cache protobuf && curl -L https://github.com/fullstorydev/grpcurl/releases/download/v1.8.2/grpcurl_1.8.2_linux_x86_64.tar.gz | tar xz && mv grpcurl /usr/local/bin/grpcurl && sleep infinity"
kubectl run grpc-client --image=fullstorydev/grpcurl:latest --restart=Never --command -- sleep infinity

